{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        
        /* Bundler mode */
        "jsx": "react-jsx",
        
        /* Type Checking */
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,

        /* Modules */
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}