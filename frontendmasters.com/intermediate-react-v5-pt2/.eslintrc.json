{
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2023,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react", "import"],
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "double", { "allowTemplateLiterals": true }],
        "no-unused-vars": "warn",
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"]
            }
        }
    }
}